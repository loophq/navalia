{
  "name": "navalia",
  "version": "0.1.2-l6",
  "description": "A browser automation manager with a consistent API",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "navalia": "bin/navalia.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build",
    "cover": "jest --coverage",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/graphql/server.ts",
    "docs": "cd docs && bundle exec jekyll serve",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.ts\"",
    "release": "np",
    "start": "ts-node",
    "test": "jest",
    "watch": "jest --watch"
  },
  "keywords": [
    "chrome",
    "headless",
    "cluster",
    "queue",
    "navalia"
  ],
  "author": "jgriffith",
  "license": "LGPL-3.0",
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/jest": "^20.0.2",
    "@types/lodash": "^4.14.67",
    "@types/node": "^6.0.4",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "nodemon": "^1.11.0",
    "np": "^2.16.0",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "chrome-launcher": "^0.3.0",
    "chrome-remote-interface": "^0.24.1",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.5",
    "lodash": "^4.17.4",
    "ts-node": "^3.1.0",
    "yargs": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelgriffith/navalia.git"
  },
  "bugs": "https://github.com/joelgriffith/navalia/issues",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!chrome-launcher)"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
